<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <record model="ir.ui.view" id="view_vendor_receipt_dialog_form">
            <field name="name">account.voucher.receipt.dialog.form</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_dialog_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='journal_id']" position="after">
					<field name="hide" invisible='1'/>
                    <field name="rendicion" attrs="{'invisible':[('hide','=',False)]}" on_change="onchange_rendicion(rendicion)"/>  
                </xpath>
            </field>
        </record>
		
		<record model="ir.ui.view" id="view_vendor_payment_form">
            <field name="name">account.voucher.payment.form</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='journal_id']" position="after">
					<field name="hide" invisible='1'/>
                    <field name="rendicion" attrs="{'invisible':[('hide','=',False)]}" on_change="onchange_rendicion(rendicion)"/>  
                </xpath>
            </field>
        </record>
		
	</data>
</openerp>